{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    },
    "jsRules": {
      "max-line-length": {
        "options": [
          120
        ]
      }
    },
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "trailing-comma": false,
    "member-access": [
      true,
      "no-public"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "arrow-parens": false
  }
}
